<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin>
  <name>Chronos</name>
  <description>Chronos</description>
  <version>1.0</version>
  <vendor>ops4j</vendor>
  <idea-version since-build="3000"/>
  <project-components>
    <component>
      <implementation-class>org.qi4j.chronos.ui.setting.ChronosSetting</implementation-class>
    </component>
    <component>
      <implementation-class>org.qi4j.chronos.ui.task.TaskToolWindow</implementation-class>
    </component>
  </project-components>
  <actions>
    <group id="ChronosTaskGroup">
      <action id="ChronosNewTaskAction" class="org.qi4j.chronos.action.NewTaskAction" text="New Task"
              description="New Task"/>
      <action id="ChronosViewClosedOrWontFixTaskAction" class="org.qi4j.chronos.action.ViewClosedOrWontFixTaskAction"
              text="View Closed/Won't Fix Task"
              description="View Closed/Won't Fix Task"/>
    </group>

    <group id="ChronosSettingGroup">
      <action id="ChronosSettingAction" class="org.qi4j.chronos.action.ChronosSettingAction"
              text="Chronos Setting"
              description="Chronos Setting"/>
    </group>
  </actions>
</idea-plugin>